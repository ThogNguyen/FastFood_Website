@layout AdminLayout
@page "/editcoupon"

<!-- begin row -->
<div class="row">
    <div class="col-md-12 m-b-30">
        <!-- begin page title -->
        <div class="d-block d-sm-flex flex-nowrap align-items-center">
            <div class="page-title mb-2 mb-sm-0">
                <h1>Sửa mã giảm giá</h1>
            </div>
        </div>
        <!-- end page title -->
    </div>
</div>
<!-- end row -->
<!-- begin row -->
<div class="row editable-wrapper">
    <div class="col-lg-12">
        <div class="row">
            <div class="form-group mb-3">
                <a href="coupons" class="tabledit-edit-button btn btn-danger">
                    Trở về
                </a>
            </div>
            <div class="col-md-6 mx-auto">
                <form method="post">
                    <div class="row">
                        <div class="form-group">
                            <label class="control-label">Tên mã giảm giá</label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label class="control-label">Giảm ?%</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Số lượng</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group">
                            <label class="control-label">Ngày bắt đầu</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Ngày kết thúc</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label>Tình trạng</label>
                            <select class="form-control">
                                <option selected>Chọn tình trạng</option>
                                <option>Hoạt động</option>
                                <option>Ngừng hoạt động</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group mt-3">
                            <button class="btn btn-primary mb-4 w-100" type="submit">Lưu Thay Đổi</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- end row -->

