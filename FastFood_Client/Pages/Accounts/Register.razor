@layout NullLayout
@page "/register"

<div class="row no-gutters">
    <div class="col-sm-6 col-xxl-8 col-lg-7 bg-gradient o-hidden order-2 order-sm-1">
        <div class="row align-items-center h-100">
            <div class="col-7 mx-auto">
                <img class="img-fluid" src="/admin/assets/img/bg/login.svg" alt="">
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-5 col-xxl-4 align-self-center order-1 order-sm-2">
        <div class="d-flex align-items-center h-100-vh">
            <div class="register p-5">
                <h3>Welcome, Please create your account.</h3>
                <form>
                    <div class="row">
                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Họ và tên*</label>
                                <input class="form-control" placeholder="Nhập họ và tên của bạn" />
                            </div>
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Tên đăng nhập*</label>
                                <inpu class="form-control" placeholder="Nhập tên đăng nhập" />
                            </div>
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Email*</label>
                                <input type="email" class="form-control" placeholder="Nhập email" />
                            </div>
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Số điện thoại*</label>
                                <input class="form-control" placeholder="Nhập số điện thoại" />
                               
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label class="control-label">Địa chỉ*</label>
                                <input class="form-control" placeholder="Nhập địa chỉ" />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label class="control-label">Mật khẩu*</label>
                                <input type="password" class="form-control" placeholder="Nhập mật khẩu" />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label class="control-label">Xác nhận mật khẩu*</label>
                                <input type="password" class="form-control" placeholder="Nhập mật khẩu lần 2" />
                            </div>
                        </div>
                        <div class="col-12 mt-3">
                            <button type="submit" class="btn btn-primary text-uppercase w-100">Đăng Ký</button>
                        </div>
                        <div class="col-12 mt-3">
                            <p>Đã có tài khoản?<a href="login"> Đăng Nhập</a></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

