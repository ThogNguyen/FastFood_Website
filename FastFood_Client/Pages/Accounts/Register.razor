@layout NullLayout
@page "/register"

<div class="row no-gutters">
    <div class="col-sm-6 col-xxl-8 col-lg-7 bg-gradient o-hidden order-2 order-sm-1">
        <div class="row align-items-center h-100">
            <div class="col-7 mx-auto">
                <img class="img-fluid" src="/admin/assets/img/bg/login.svg" alt="">
            </div>
        </div>
    </div>
    <div class="col-sm-6 col-lg-5 col-xxl-4 align-self-center order-1 order-sm-2">
        <div class="d-flex align-items-center h-100-vh">
            <div class="register p-5">
                <h3>Welcome, Please create your account.</h3>
                <form action="#" class="mt-2 mt-sm-5">
                    <div class="row">
                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label class="control-label">First Name*</label>
                                <input type="text" class="form-control" placeholder="First Name" />
                            </div>
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="form-group">
                                <label class="control-label">Last Name*</label>
                                <input type="text" class="form-control" placeholder="Last Name" />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label class="control-label">Email*</label>
                                <input type="email" class="form-control" placeholder="Email" />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label class="control-label">Username*</label>
                                <input type="text" class="form-control" placeholder="Username" />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <label class="control-label">Password*</label>
                                <input type="password" class="form-control" placeholder="Password" />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="gridCheck">
                                <label class="form-check-label" for="gridCheck">
                                    I accept terms & policy
                                </label>
                            </div>
                        </div>
                        <div class="col-12 mt-3">
                            <a href="auth-login.html" class="btn btn-primary text-uppercase w-100">Sign up</a>
                        </div>
                        <div class="col-12 mt-3">
                            <p>Already have an account?<a href="login"> Sign In</a></p>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


