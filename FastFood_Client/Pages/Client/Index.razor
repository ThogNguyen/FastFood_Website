<PageTitle>Index</PageTitle>

<!-- Hero Section Begin -->
<section class="hero">
    <div class="hero__slider owl-carousel">
        <div class="hero__item set-bg" data-setbg="client/img/hero/hero-1.jpg">
        </div>
        <div class="hero__item set-bg" data-setbg="client/img/hero/hero-2.jpg">
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                        <div class="hero__text">
                            <h2>Khuyến Mãi Mỗi Tuần</h2>
                            <a href="#" class="primary-btn">Đặt món ngay!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Hero Section End -->

<section class="product spad">
    <div class="container">
        <div class="section-title text-center">
            <h2 class="text-uppercase mt-5">Sản phẩm mới nhất</h2>
        </div>
        <div class="row">
            @if (Products != null)
            {
                @foreach (var product in Products)
                {
                    <div class="col-lg-3 col-md-6 col-sm-6">
                        <div class="product__item">
                            <div class="product__item__pic set-bg">
                                <a href="@($"ProductDetails/{product.Id}")">
                                    <img src="@product.Image" />
                                </a>
                                <div class="product__label">
                                    <span>@product.CategoryName</span>
                                </div>
                            </div>
                            <div class="product__item__text">
                                <h6><a href="@($"ProductDetails/{product.Id}")">@product.ProductName</a></h6>
                                <div class="product__item__price">$@product.Price.ToString("0.00")</div>
                                <div class="cart_add">
                                    <a >Thêm vào giỏ</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p>Đang tải dữ liệu sản phẩm...</p>
                </div>
            }
        </div>
    </div>
</section>

